<resources>

    <!-- Circle ImageView Style -->
    <style name="CircleImageView">
        <item name="shapeAppearanceOverlay">@style/CircleImage</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/darkgreen</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <!-- Custom circular shape appearance -->
    <style name="CustomShapeAppearance.Circular" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.NoAnimation">
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item> <!-- Button text color -->
        <item name="android:background">@color/darkgreen</item> <!-- Dialog background color -->
    </style>

</resources>
